#!/usr/bin/env bash

#INPUT="${MT09_FILE}"
INPUT="${JAMR_HOME}/data/amr_anno_1.0_no_MT09/data/split/MT09/MT09.txt"
OUTPUT="${MODEL_DIR}/MT09-grammars"

mkdir -p "${OUTPUT}"

"${JAMR_HOME}/run" Generate.SentenceLevelGrammars \
    --weights "${MODEL_DIR}/rule-model" \
    --rule-inventory "${MODEL_DIR}/extract-rules" \
    --kbest 100 \
    --no-reference \
    --dependencies "${INPUT}.snt.deps" \
    --ner "${INPUT}.snt.IllinoisNER" \
    --tok "${INPUT}.snt.tok" \
    --snt "${INPUT}.snt" \
    --output "${OUTPUT}" \
    -v 0 \
    ${GENERATOR_OPTIONS} \
    < "${INPUT}.aligned" \
    > "${OUTPUT}.snt" \
    2> "${OUTPUT}.err"
    #${GENERATOR_GRAMMAR_OPTIONS} \

#    ${PARSER_OPTIONS} \
